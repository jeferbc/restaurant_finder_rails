<div class="container">
    <div class="row ">
        <div class="col-md-4 col-md-offset-4">
            <%= form_tag(root_path, method: "get") do %>
                <div class="input-group">
                    <%= text_field_tag(:query, nil, {class: 'form-control', placeholder: "Buscar Restaurante"}) %>
                    <%= select_tag(:zones, options_from_collection_for_select(@zones, "id", "name"),{prompt:"Seleccione Zona" , class: 'form-control'}) %>
                    <%= select_tag(:specialties, options_from_collection_for_select(@specialties, "id", "name"),{prompt:"Seleccione Especialidad" , class: 'form-control'}) %>
                    <%= submit_tag("Search", class: "btn btn-default") %>
                </div>
            <% end %>
        </div>
    </div>
    <div class="restaurants">
        <% @locals.each do |local| %>
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <img src="<%= local.restaurant.img_url %>" alt="...">
                    <div class="caption">
                        <h4><%= local.restaurant.name %></h4>
                        <h5><%= "Especialidad: #{local.restaurant.specialty}" %></h5>
                        <h5><%= "Teléfono: #{local.phone}" %></h5>
                        <h5><%= "Direccíon: #{local.address}" %></h5>
                        <h5><%= "Horario: #{local.schedule}" %></h5>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>
